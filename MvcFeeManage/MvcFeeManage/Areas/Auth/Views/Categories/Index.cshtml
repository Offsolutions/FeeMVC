@model IEnumerable<MvcFeeManage.Areas.Auth.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/Layout.cshtml";
}

<h2><b>Inquiry Category</b></h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Categoryid }, new { @class = "label label-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Categoryid }, new { @class = "label label-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Categoryid }, new { @class = "label label-danger" })
                </td>
            </tr>
        }

    </table>
</div>