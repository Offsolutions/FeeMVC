@model IEnumerable<MvcFeeManage.Areas.Auth.Models.StudentCourse>
@using MvcFeeManage.Areas.Auth.Models
@{
    ViewBag.Title = "Search";
    Layout = "~/Areas/Auth/Views/Shared/Layout.cshtml";
    dbcontext db = new dbcontext();
    var active = "Active";
    var Deactive = "Deactive";
    var receiptdetail = db.Recipt_Details.Where(x => x.RollNo == 0).ToList();
    if (ViewData["RollNo"] != null)
    {
        int rolno = Convert.ToInt32(ViewData["RollNo"].ToString());
        receiptdetail = db.Recipt_Details.Where(x => x.RollNo == rolno).ToList();
    }
    else
    {
        receiptdetail = db.Recipt_Details.Where(x => x.RollNo == 0).ToList();
    }
}

<h2><b>Search</b></h2>

<div class="row">
    @using (Html.BeginForm("Search", "Default", FormMethod.Post))
    {
        <div class="col-md-12" style="padding-bottom:20px;">

            <div class="col-md-3">
                <input id="search" type="text" name="search" class="form-control" placeholder="Enter roll no." />
            </div>

            <div class="col-md-3">
                <input id="submit" type="button" value="submit" class="btn btn-primary" />
            </div>

        </div>
    }
    <div class="col-md-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>

                        <th>
                            Course
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Admitdate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.enddate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fees)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @{var coursename = db.Courses.Where(x => x.CourseId == item.CourseId).ToList();}
                            @coursename[0].CourseName
                        </td>
                        <td>
                            @Convert.ToDateTime(@item.Admitdate).ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @Convert.ToDateTime(@item.enddate).ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            Rs. @Html.DisplayFor(modelItem => item.Fees)
                        </td>
                        <td>
                            @if (item.Status == true)
                            {
                                <span class="label label-success">@active.ToString()</span>
                            }
                            else
                            {
                                <span class="label label-danger">@Deactive.ToString()</span>
                            }
                        </td>

                    </tr>
                                }

            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Recipt No.
                        </th>
                        <th>
                            Course
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                            Active
                        </th>
                    </tr>
                </thead>
                @foreach (var item in receiptdetail)
                {
                    <tr>
                        <td>
                            @Convert.ToDateTime(item.Date).ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReciptNo)
                        </td>
                        <td>
                            @{var coursename = db.Courses.Where(x => x.CourseId == item.CourseId).ToList();}
                            @coursename[0].CourseName
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @if (item.Active == true)
                            {
                                <span class="label label-success">@active.ToString()</span>
                            }
                            else
                            {
                                <span class="label label-danger">@Deactive.ToString()</span>
                            }
                        </td>
                    </tr>
                                }
            </table>
        </div>
    </div>
</div>
