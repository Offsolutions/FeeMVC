@model IEnumerable<MvcFeeManage.Areas.Auth.Models.tblstudentdata>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/Layout.cshtml";
    var active = "Active";
    var Deactive = "Deactive";
}

<h2><b>Index</b></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.rollno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fathername)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.phone)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.board)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.image)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.rollno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fathername)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.board)
                </td>
                <td>
                    <img src="~/UploadedFiles/@item.image" width="70" />
                </td>

                <td>
             
                    @if (item.Status==true)
                    {
                      @active.ToString();
                    }
                    else
                     {
                         @Deactive.ToString();
                     }
                    @*@Html.DisplayFor(modelItem => item.Status)*@
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("View", "View", new { roll = item.rollno }) |
                    @Html.ActionLink("Deposit", "Deposit", new { roll = item.rollno })
                </td>
            </tr>
          }

    </table>
</div>